<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFCC94"
    tools:context=".recovery_reset">

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="247dp"
        android:layout_height="55dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="514dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="162dp"
        android:backgroundTint="#344966"
        android:fontFamily="@font/maven_pro"
        android:text="Confirm"
        android:textColor="@color/babypowder"
        android:textColorLink="@color/babypowder"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_otp"
        android:layout_width="313dp"
        android:layout_height="64dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="383dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="308dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="OTP"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorLink="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="269dp"
        android:layout_marginBottom="359dp"
        android:text="Enter OTP:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="627dp"
        android:fontFamily="@font/maven_pro"
        android:text="One-Time Passcode"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="523dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lock_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>